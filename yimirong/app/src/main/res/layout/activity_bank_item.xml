<?xml version='1.0' encoding='UTF-8'?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/activity_bank_item_icon"
        android:layout_width="56dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:contentDescription="@string/image_content"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"/>

    <RelativeLayout
        android:id="@+id/activity_bank_item_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:layout_toRightOf="@+id/activity_bank_item_icon"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <TextView
            android:id="@+id/activity_bank_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:singleLine="true"/>

        <TextView
            android:id="@+id/activity_bank_item_single"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/activity_bank_item_name"
            android:layout_below="@+id/activity_bank_item_name"
            android:text="@string/bank_xiane"
            android:textColor="#a6a6a6"
            android:textSize="12sp"
            android:singleLine="true"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignLeft="@+id/activity_bank_item_wrapper"
        android:layout_alignParentBottom="true"
        android:background="@color/dark_gray"/>

</RelativeLayout>