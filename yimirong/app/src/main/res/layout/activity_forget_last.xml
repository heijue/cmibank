<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    tools:context="cn.app.yimirong.activity.ForgetLastActivity">

    <include layout="@layout/title_bar"/>

    <RelativeLayout
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <TextView
            android:id="@+id/account_number_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号"
            android:textColor="#999999"
            android:layout_centerVertical="true"
            android:textSize="17sp"/>

        <TextView
            android:id="@+id/account_number"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="#999999"
            android:layout_toRightOf="@id/account_number_text"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#cccccc"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <TextView
            android:id="@+id/first_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:textSize="17sp"/>

        <EditText
            android:id="@+id/first_number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:background="@null"
            android:password="true"
            android:hint="请设置密码"
            android:textColor="@color/black"
            android:textColorHint="#cccccc"
            android:inputType="textPassword"
            android:layout_toRightOf="@id/first_text"
            android:layout_centerVertical="true"
            android:layout_marginRight="60dp"
            android:layout_marginLeft="57dp"/>

        <ImageView
            android:id="@+id/first_qingchu"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:visibility="gone"
            android:src="@drawable/qinhchu"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

        <View
            android:id="@+id/first_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#cccccc"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <TextView
            android:id="@+id/second_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认密码"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:textSize="17sp"/>

        <EditText
            android:id="@+id/second_number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:background="@null"
            android:password="true"
            android:hint="请再次输入"
            android:textColor="@color/black"
            android:textColorHint="#cccccc"
            android:inputType="textPassword"
            android:layout_toRightOf="@id/second_text"
            android:layout_centerVertical="true"
            android:layout_marginRight="60dp"
            android:layout_marginLeft="23dp"/>

        <ImageView
            android:id="@+id/second_qingchu"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:visibility="gone"
            android:src="@drawable/qinhchu"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

        <View
            android:id="@+id/second_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#cccccc"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

</LinearLayout>
