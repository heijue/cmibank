<?xml version='1.0' encoding='UTF-8'?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:clipToPadding="true"
              android:fitsSystemWindows="true"
              android:orientation="vertical">

    <include layout="@layout/title_bar"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp">

            <View
                android:id="@+id/activity_create_lock_preview_1"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/shape_lock_preview_bg_white"/>

            <View
                android:id="@+id/activity_create_lock_preview_2"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/shape_lock_preview_bg_white"/>

            <View
                android:id="@+id/activity_create_lock_preview_3"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/shape_lock_preview_bg_white"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginTop="6dp">

            <View
                android:id="@+id/activity_create_lock_preview_4"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/shape_lock_preview_bg_white"/>

            <View
                android:id="@+id/activity_create_lock_preview_5"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/shape_lock_preview_bg_white"/>

            <View
                android:id="@+id/activity_create_lock_preview_6"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/shape_lock_preview_bg_white"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginTop="6dp">

            <View
                android:id="@+id/activity_create_lock_preview_7"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/shape_lock_preview_bg_white"/>

            <View
                android:id="@+id/activity_create_lock_preview_8"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/shape_lock_preview_bg_white"/>

            <View
                android:id="@+id/activity_create_lock_preview_9"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/shape_lock_preview_bg_white"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/activity_create_lock_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/huizhi_lock_info"
        android:textColor="@color/black"
        android:textSize="16sp"/>

    <cn.yimirong.view.lock.LockView
        android:id="@+id/activity_create_lock_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/unlock_view_height"
        app:lock_lineColor="#13baf8"
        app:lock_lineWidth="8dp"
        app:lock_nodeNormal="@drawable/lock_view_node_normal"
        app:lock_nodePressed="@drawable/lock_view_node_pressed"
        app:lock_nodeWrong="@drawable/lock_view_node_wrong"
        app:lock_padding="50dp"
        app:lock_spacing="30dp"/>

</LinearLayout>