<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="270dp"
              android:layout_height="wrap_content"
              android:background="@drawable/shape_btn_pay">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="提示"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="21dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="本次提现金额"
            android:textSize="15sp"
            android:textColor="@color/profit"/>

        <TextView
            android:id="@+id/benci_tixian_jine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="15sp"
            android:text="￥20.00"
            android:textColor="@color/profit"
            android:gravity="right"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="实际到账金额"
            android:textSize="15sp"
            android:textColor="@color/profit"/>

        <TextView
            android:id="@+id/shiji_tixian_jine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="15sp"
            android:text="￥18.00"
            android:textColor="@color/profit"
            android:gravity="right"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="本次手续费"
            android:textSize="15sp"
            android:textColor="@color/profit"/>

        <TextView
            android:id="@+id/benci_shoufei"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="15sp"
            android:text="￥2.00"
            android:textColor="@color/profit"
            android:gravity="right"/>
    </LinearLayout>

    <View
        android:layout_marginTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray"/>

    <LinearLayout
        android:id="@+id/btn_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_btnoff"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="#e95462"
            android:textSize="17sp" />

        <View
            android:layout_width="1px"
            android:layout_height="45dp"
            android:background="@color/gray"/>

        <TextView
            android:id="@+id/dialog_btnok"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:text="继续提现"
            android:textSize="17sp"
            android:textColor="#e95462"
            android:layout_weight="1"/>
    </LinearLayout>


</LinearLayout>