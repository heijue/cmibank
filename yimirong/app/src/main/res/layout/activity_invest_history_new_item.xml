<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/selector_mine">

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingRight="12dp"
        android:paddingLeft="12dp">
        <TextView
            android:id="@+id/activity_history_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="14sp"
            android:textColor="@color/look_details_color"/>

        <TextView
            android:id="@+id/activity_history_item_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/look_details_color"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/history_item1"
        android:layout_below="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:paddingLeft="12dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="投资本金："
            android:textColor="#4c4c4c"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/activity_history_item_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00"
            android:layout_marginLeft="200dp"
            android:textSize="16sp"
            android:textColor="@color/black"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/history_item1"
        android:layout_marginTop="12dp"
        android:paddingLeft="12dp"
        android:id="@+id/endtime_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       >
        <TextView
            android:id="@+id/daoqi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="到期时间："
            android:textColor="#4c4c4c"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/daoqitime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00"
            android:layout_marginLeft="200dp"
            android:textSize="16sp"
            android:textColor="@color/black"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/history_item2"
        android:layout_below="@+id/endtime_layout"
        android:layout_marginTop="12dp"
        android:paddingLeft="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="历史年化收益率："
            android:textColor="#4c4c4c"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/annual_yield_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00"
            android:layout_marginLeft="200dp"
            android:textSize="16sp"
            android:textColor="@color/black"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/history_item2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:paddingLeft="12dp"
        android:layout_marginBottom="12dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="历史相同产品回报："
            android:textColor="#4c4c4c"
            android:layout_marginRight="50dp"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/activity_history_item_profit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00"
            android:layout_marginLeft="200dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            />
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="23dp"
        android:paddingLeft="12dp"
        android:layout_centerVertical="true"
        android:paddingRight="12dp">

        <!--<TextView-->
            <!--android:id="@+id/daoqi"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="即将到期"-->
            <!--android:visibility="gone"-->
            <!--android:textSize="15sp"-->
            <!--android:textColor="@color/control_text_pressed"/>-->

        <ImageView
            android:id="@+id/fragment_mine_qualification_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/next"/>

        <TextView
            android:id="@+id/activity_history_item_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:textSize="14sp"
            android:textColor="@color/look_details_color"
            android:layout_toStartOf="@+id/fragment_mine_qualification_next"
            android:layout_toLeftOf="@id/fragment_mine_qualification_next"/>
    </RelativeLayout>

</RelativeLayout>