<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="300dp"
              android:layout_height="wrap_content"
              android:background="@drawable/shape_bg_dialog_white_10"
              android:orientation="vertical">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/tishi"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        />
    <TextView
        android:id="@+id/dialog_custom2_message"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:paddingTop="25dp"
        android:paddingBottom="25dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:gravity="center"
        android:lineSpacingMultiplier="1.2"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:text="提示消息内容"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/control_text_pressed"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_custom2_left_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/selector_lb_bg"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="@string/cancel"
            android:textColor="#0d81f2"
            android:textSize="17sp"/>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/control_text_pressed"/>

        <TextView
            android:id="@+id/dialog_custom2_right_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/selector_rb_bg"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="@string/ok"
            android:textColor="#0d81f2"
            android:textSize="17sp"/>
    </LinearLayout>

</LinearLayout>