<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/title_bar_wrapper"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/control_text_pressed"
                android:paddingLeft="5dp">

    <TextView
        android:id="@+id/title_bar_back_text"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:drawableLeft="@drawable/selector_jiantou_white"
        android:drawablePadding="2dp"
        android:gravity="center_vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="15dp"
        android:paddingTop="5dp"
        android:singleLine="true"
        android:text="@string/title_bar_back"
        android:textColor="@drawable/selector_white_text"
        android:textSize="@dimen/title_bar_back_text_size"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center">

        <TextView
            android:id="@+id/title_bar_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:singleLine="true"
            android:text="@string/title_bar_title"
            android:textColor="@drawable/selector_white_text"
            android:textSize="@dimen/title_bar_title_text_size"/>


    </RelativeLayout>





</RelativeLayout>