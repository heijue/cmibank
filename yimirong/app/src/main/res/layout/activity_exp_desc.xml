<?xml version='1.0' encoding='UTF-8'?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="@dimen/invite_desc_width"
                android:layout_height="@dimen/invite_desc_height"
                android:layout_gravity="center"
                android:orientation="vertical">

    <ImageView
        android:id="@+id/activity_exp_desc_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/instruction"
        android:gravity="center"
        android:textColor="#f14b3b"
        android:textSize="18sp"/>

    <WebView
        android:id="@+id/activity_exp_desc_webview"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_below="@+id/activity_exp_desc_title"
        android:scrollbars="none"/>

    <ImageView
        android:id="@+id/activity_exp_desc_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_exp_desc_webview"
        android:background="@drawable/shape194"
        android:clickable="true"
        android:layout_centerHorizontal="true"
        />
</RelativeLayout>