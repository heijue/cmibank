<?xml version='1.0' encoding='UTF-8'?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/light_gray"
              android:clipToPadding="true"
              android:fitsSystemWindows="true"
              android:orientation="vertical">

    <include layout="@layout/title_bar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/selector_mine"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:text="@string/user"
                    android:visibility="visible"/>
                <TextView
                    android:id="@+id/activity_account_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/look_details_color"
                    android:textSize="14sp"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#d9d9d9"/>
            <RelativeLayout
                android:id="@+id/activity_account_name_wrapper"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:background="@drawable/selector_mine"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/shiming_renzheng"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    />
                <TextView
                    android:id="@+id/activity_account_isverified"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/unidentify"
                    android:drawablePadding="5dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/control_text_pressed"
                    android:drawableRight="@drawable/jiantou"
                    android:textSize="14sp"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#d9d9d9"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/activity_account_bankcard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:background="@drawable/selector_mine"
                    android:drawableRight="@drawable/jiantou"
                    android:text="@string/bank_card_manage"
                    android:textColor="#000000"
                    android:textSize="16sp"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="15dp">

                <TextView
                    android:id="@+id/activity_account_login_pass"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/selector_mine"
                    android:clickable="true"
                    android:drawablePadding="10dp"
                    android:drawableRight="@drawable/jiantou"
                    android:gravity="center_vertical"
                    android:paddingRight="15dp"
                    android:text="@string/reset_login_pass"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#d9d9d9"/>

                <TextView
                    android:id="@+id/activity_account_pay_pass"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/selector_mine"
                    android:clickable="true"
                    android:drawablePadding="10dp"
                    android:drawableRight="@drawable/jiantou"
                    android:gravity="center_vertical"
                    android:paddingRight="15dp"
                    android:text="@string/reset_pay_pass"
                    android:textColor="#000000"
                    android:textSize="16sp" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/activity_account_shoushi_wrapper"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/selector_mine"
                android:clickable="true"
                android:paddingLeft="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:text="@string/gesture_password"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#d9d9d9"/>

                <CheckBox
                    android:id="@+id/activity_account_shoushi_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/toggle_btn"
                    android:button="@null"
                    android:layout_marginRight="15dp"
                    android:checked="true"/>

                <View
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#d9d9d9"/>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/activity_account_gesture_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:visibility="gone">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_alignParentLeft="true"
                    android:background="@color/white"
                    android:drawableLeft="@drawable/xiugaishoushi_lan"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:text="@string/modify_gesture_password"
                    android:textColor="#000000"
                    android:textSize="16sp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#d9d9d9"/>

            </LinearLayout>


            <RelativeLayout
                android:id="@+id/activity_account_myqrcode_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_mine"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="46dp"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:text="@string/myqrcode"
                    android:textColor="#303030"
                    android:textSize="16sp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/jiantou"/>
            </RelativeLayout>


            <TextView
                android:id="@+id/activity_account_logout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="50dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/selector_bg_red_btn"
                android:gravity="center"
                android:paddingBottom="@dimen/btn_padding_bottom"
                android:paddingTop="@dimen/btn_padding_top"
                android:text="@string/logout"
                android:textColor="@color/white"
                android:textSize="18sp"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>