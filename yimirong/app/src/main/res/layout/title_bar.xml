<?xml version='1.0' encoding='UTF-8'?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/title_bar_wrapper"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/control_text_checked"
                android:paddingLeft="5dp">

    <TextView
        android:id="@+id/title_bar_back_text"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:drawableLeft="@drawable/selector_jiantou_white"
        android:drawablePadding="2dp"
        android:gravity="center_vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="15dp"
        android:paddingTop="5dp"
        android:singleLine="true"
        android:text="@string/title_bar_back"
        android:textColor="@drawable/selector_white_text"
        android:textSize="@dimen/title_bar_back_text_size"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center">

        <TextView
            android:id="@+id/title_bar_title_text"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:singleLine="true"
            android:text="@string/title_bar_title"
            android:textColor="@drawable/selector_white_text"
            android:textSize="@dimen/title_bar_title_text_size"/>

        <TextView
            android:id="@+id/title_bar_title_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_bar_title_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-5dp"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:visibility="gone"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/title_bar_title_indicator"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/shaixuan"
        android:visibility="gone"/>

    <ImageButton
        android:id="@+id/title_bar_title_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:paddingRight="15dp"
        android:layout_centerVertical="true"
        android:background="@drawable/xiaoxi_wu"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/title_bar_title_right"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:textColor="@drawable/selector_white_text"
        android:textSize="16sp"
        android:visibility="gone"/>

</RelativeLayout>