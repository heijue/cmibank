<?xml version='1.0' encoding='UTF-8'?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/control_text_checked"
                android:paddingBottom="10dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="@dimen/main_title_bar_padding_top">

    <TextView
        android:id="@+id/main_title_bar_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:singleLine="true"
        android:text="@string/title_bar_title"
        android:textColor="@drawable/selector_white_text"
        android:textSize="@dimen/title_bar_title_text_size"/>

</RelativeLayout>