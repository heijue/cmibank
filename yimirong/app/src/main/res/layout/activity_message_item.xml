<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
    android:background="@drawable/shape_gonggao_all"
    android:orientation="horizontal"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="14dp"
    android:layout_marginRight="14dp"
              >
    <ImageView
        android:id="@+id/left_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/gonggao"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="8dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="8dp"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:background="@drawable/shape_gonggao_top"
            android:orientation="vertical">

            <TextView
                android:id="@+id/activity_message_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/message_item_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:paddingBottom="5dp"
                android:textColor="@color/look_details_color"/>

            <TextView
                android:layout_marginBottom="13dp"
                android:textSize="15sp"
                android:layout_marginTop="4dp"
                android:textColor="@color/black"
                android:lineSpacingMultiplier="1.1"
                android:id="@+id/message_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>


        <TextView
            android:id="@+id/bottom_look"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:text="查看详情"
            android:drawableRight="@drawable/jiantou"
            android:gravity="center_vertical"
            android:textColor="@color/black"/>
    </LinearLayout>

</LinearLayout>