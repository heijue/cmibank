    <RelativeLayout
        android:layout_below="@id/zhuce_title"
        android:id="@+id/login_password"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="25dp"
        android:paddingLeft="14dp"
        android:paddingRight="14dp">

        <TextView
            android:id="@+id/mima_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码"
            android:textSize="16sp"
            android:layout_marginRight="50dp"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/activity_register_pass_et"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginRight="40dp"
            android:layout_toRightOf="@id/mima_text"
            android:background="@null"
            android:hint="请填写密码"
            android:singleLine="true"
            android:inputType="textPhonetic"
            android:password="true"
            android:textColor="@color/black"
            android:textColorHint="#cccccc"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/zhuce_setmm_xianshi"
            android:background="@drawable/selector_xianshi"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_alignParentRight="true"/>

        <View
            android:id="@+id/login_mima_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#cccccc"
            android:layout_alignParentBottom="true"/>


    </RelativeLayout>

    <Button
        android:id="@+id/activity_register_btnok"
        android:layout_below="@id/login_password"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/shape_login_button"
        android:textColor="#ff9898"
        android:text="确定"
        android:layout_marginTop="25dp"
        android:layout_marginRight="14dp"
        android:layout_marginLeft="14dp"
