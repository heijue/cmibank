<?xml version='1.0' encoding='UTF-8'?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/light_gray"
              android:clipToPadding="true"
              android:fitsSystemWindows="true"
              android:orientation="vertical">

    <include layout="@layout/title_bar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:paddingTop="25dp"
        android:layout_marginBottom="1dp"
        android:background="@color/white"
        >

        <ImageView
            android:id="@+id/wanchen_img"
            android:src="@drawable/jiaoyichenggong"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/wancheng_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="购买成功"
            android:textColor="@color/black"
            android:layout_marginTop="15dp"
            android:textSize="21dp"
            android:layout_below="@id/wanchen_img"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:layout_marginBottom="1dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="@string/product_name"
            android:textColor="@color/look_details_color"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/activity_dqbuy_detail_pname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:singleLine="true"
            android:textColor="#303030"
            android:textSize="16sp"/>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginBottom="1dp"
        >

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="@string/buy_money_num"
            android:textColor="@color/look_details_color"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/activity_dqbuy_detail_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:singleLine="true"
            android:textColor="#303030"
            android:textSize="16sp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:layout_marginBottom="1dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="@string/pay_type"
            android:textColor="@color/look_details_color"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/activity_dqbuy_detail_paytype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:singleLine="true"
            android:textColor="#303030"
            android:textSize="16sp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:singleLine="true"
            android:text="交易号"
            android:textColor="@color/look_details_color"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/activity_dqbuy_detail_paynum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:singleLine="true"
            android:textColor="#303030"
            android:textSize="16sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/activity_dqbuy_detail_product"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:drawableRight="@drawable/jiantou"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:visibility="gone"
        android:paddingRight="15dp"
        android:singleLine="true"
        android:text="产品详情"
        android:textColor="#d0d0d0"
        android:textSize="15sp"/>

</LinearLayout>